<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_cart_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/appkefu_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/appkefu_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/appkefu_title_bar_bg"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/appkefu_titlebar_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/appkefu_title_back_bg"
            android:padding="10dp"
            android:src="@drawable/appkefu_title_back" />

        <TextView
            android:id="@+id/appkefu_titlebar_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:text="@string/appkefu_faq_title"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/appkefu_faq_title_progress"
            style="@style/appkefu_pulltofresh_top_loading_small"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@drawable/appkefu_search_bar_edit_bg"
        android:gravity="center"
        android:padding="3dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:src="@drawable/appkefu_search_bar_icon_normal" />

        <EditText
            android:id="@+id/appkefu_faq_searchbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:cursorVisible="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="搜索"
            android:padding="2dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textCursorDrawable="@null"
            android:textSize="15sp">

        </EditText>

        <ImageView
            android:id="@+id/appkefu_edt_clean"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/appkefu_edit_clean"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/appkefu_colorLine" />

    <ListView
        android:id="@+id/appkefu_faq_section_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee"
        android:divider="@color/appkefu_colorLine"
        android:dividerHeight="0.5dp" />

</LinearLayout>











<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eee"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/profile_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@color/title_bar_background">

        <ImageView
            android:id="@+id/profile_reback_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/selector_bg_gray1"
            android:src="@drawable/title_back" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="用户标签列表"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_top_layout"
        android:fadingEdge="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorLine" />


            <RelativeLayout
                android:id="@+id/layout_personal_nickname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/api_item_background"
                android:clickable="true"
                android:gravity="center_vertical"
                android:padding="13dp">

                <TextView
                    android:id="@+id/personal_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/personal_nickname_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_toLeftOf="@+id/right_arrow"
                    android:layout_toRightOf="@+id/personal_nickname"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:src="@drawable/api_item_disclosure_arrow_normal" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:background="@color/colorLine" />

            <RelativeLayout
                android:id="@+id/layout_personal_sex"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/api_item_background"
                android:clickable="true"
                android:gravity="center_vertical"
                android:padding="13dp">

                <TextView
                    android:id="@+id/personal_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/personal_sex_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_toLeftOf="@+id/right_arrow_1"
                    android:layout_toRightOf="@+id/personal_sex"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/right_arrow_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:src="@drawable/api_item_disclosure_arrow_normal" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:background="@color/colorLine" />

            <RelativeLayout
                android:id="@+id/layout_personal_language"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/api_item_background"
                android:clickable="true"
                android:gravity="center_vertical"
                android:padding="13dp">

                <TextView
                    android:id="@+id/personal_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="语言"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/personal_language_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_toLeftOf="@+id/right_arrow_2"
                    android:layout_toRightOf="@+id/personal_language"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/right_arrow_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:src="@drawable/api_item_disclosure_arrow_normal" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:background="@color/colorLine" />

            <RelativeLayout
                android:id="@+id/layout_personal_city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/api_item_background"
                android:clickable="true"
                android:gravity="center_vertical"
                android:padding="13dp">

                <TextView
                    android:id="@+id/personal_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="城市"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/personal_city_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_toLeftOf="@+id/right_arrow_3"
                    android:layout_toRightOf="@+id/personal_city"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/right_arrow_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/api_item_disclosure_arrow_normal" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:background="@color/colorLine" />

            <RelativeLayout
                android:id="@+id/layout_personal_province"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/api_item_background"
                android:clickable="true"
                android:gravity="center_vertical"
                android:padding="13dp">

                <TextView
                    android:id="@+id/personal_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="省份"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/personal_province_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_toLeftOf="@+id/right_arrow_4"
                    android:layout_toRightOf="@+id/personal_province"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/right_arrow_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/api_item_disclosure_arrow_normal" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:background="@color/colorLine" />

            <RelativeLayout
                android:id="@+id/layout_personal_country"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/api_item_background"
                android:clickable="true"
                android:gravity="center_vertical"
                android:padding="13dp">

                <TextView
                    android:id="@+id/personal_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="国家"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/personal_country_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_toLeftOf="@+id/right_arrow_5"
                    android:layout_toRightOf="@+id/personal_country"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/right_arrow_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/api_item_disclosure_arrow_normal" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:background="@color/colorLine" />

            <RelativeLayout
                android:id="@+id/layout_other_country"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/api_item_background"
                android:clickable="true"
                android:gravity="center_vertical"
                android:padding="13dp">

                <TextView
                    android:id="@+id/personal_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/personal_other_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_toLeftOf="@+id/right_arrow_6"
                    android:layout_toRightOf="@+id/personal_other"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/right_arrow_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/api_item_disclosure_arrow_normal" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorLine" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>



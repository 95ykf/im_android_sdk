<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_cart_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eee">

    <!-- 标题栏 -->
    <RelativeLayout
        android:id="@+id/appkefu_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/appkefu_title_bar_bg"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/appkefu_titlebar_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/appkefu_title_back_bg"
            android:padding="10dp"
            android:src="@drawable/appkefu_title_back" />

        <TextView
            android:id="@+id/appkefu_titlebar_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:text="@string/appkefu_titlebar_center_title"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/appkefu_center_agent_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appkefu_title_bar"
        android:orientation="horizontal">

        <Button
            android:id="@+id/appkefu_center_onlinechat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/appkefu_bottombar_bg"
            android:paddingBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="15dp"
            android:text="在线咨询" />

        <Button
            android:id="@+id/appkefu_center_hottel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/appkefu_bottombar_bg"
            android:paddingBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="15dp"
            android:text="客服电话" />

        <Button
            android:id="@+id/appkefu_center_feedback"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/appkefu_bottombar_bg"
            android:paddingBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="15dp"
            android:text="意见反馈" />

    </LinearLayout>

    <ListView
        android:id="@+id/appkefu_center_hotfaq"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appkefu_center_agent_detail" />


</RelativeLayout>






































